@model PetShop.ViewModels.SopstvenikEditVM

@{
    ViewData["Title"] = "Измени корисник";
    var photoPath = "~/images/" + (Model.Sopstvenik.ProfilePicture ?? "3.png");
}

<h1>Измени информации: </h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger "></div>
            <input type="hidden" asp-for="Sopstvenik.Id" />
            <div class="form-group">
                <label asp-for="Sopstvenik.ImePrezime" class="control-label text-primary font-weight-bolder"></label>
                <input asp-for="Sopstvenik.ImePrezime" class="form-control" />
                <span asp-validation-for="Sopstvenik.ImePrezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sopstvenik.ImeMilenik" class="control-label text-primary font-weight-bolder"></label>
                <input asp-for="Sopstvenik.ImeMilenik" class="form-control" />
                <span asp-validation-for="Sopstvenik.ImeMilenik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sopstvenik.Grad" class="control-label text-primary font-weight-bolder"></label>
                <input asp-for="Sopstvenik.Grad" class="form-control" />
                <span asp-validation-for="Sopstvenik.Grad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sopstvenik.Email" class="control-label text-primary font-weight-bolder"></label>
                <input asp-for="Sopstvenik.Email" class="form-control" />
                <span asp-validation-for="Sopstvenik.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label text-primary font-weight-bolder">Продукти:</label>
                <select asp-for="SelectedProducts" class="form-control js-example-basic-multiple"
                        asp-items="Model.ProduktList"></select>
                <span asp-validation-for="SelectedProducts" class="text-danger"></span>
            </div>

            <div class="form-group row col-sm-4 offset-4">
                <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
            </div>
            <div class="form-group">
                <input type="submit" value="Зачувај" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexSopstvenik" class="btn btn-outline-secondary">Назад кон листа</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model PetShop.ViewModels.EditProduktVM

@{
    ViewData["Title"] = "Измени производ";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "2.jpg");
}

<h1>Измени информации: </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Ime" class="control-label text-primary font-weight-bolder"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamenetoZa" class="control-label text-primary font-weight-bolder"></label>
                <input asp-for="NamenetoZa" class="form-control" />
                <span asp-validation-for="NamenetoZa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena" class="control-label text-primary font-weight-bolder"></label>
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfilePicture" class="control-label text-primary font-weight-bolder"></label>
                <div class="custom-file">
                    <input asp-for="ProfilePicture" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group row col-sm-4 offset-4">
                <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
            </div>
            <div class="form-group">
                <input type="submit" value="Зачувај" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary">Назад кон листата</a>
</div>

@section Scripts {
<script type="text/javascript">

        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
</script>
}
